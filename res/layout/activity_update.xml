<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:background="@drawable/update">
       		
       		 <TextView 
       		     android:id="@+id/TextView1"
       		     android:text="UserId"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:textStyle="bold"
    			 android:textColor="@android:color/holo_purple"
    			 android:layout_marginTop="20dp"
    			 android:textSize="15dp"
    			 android:layout_marginLeft="10dp"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText1"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText4"
       		     android:layout_marginTop="10dp"
       		     android:hint="Enter ID" />
       		 
       		 <TextView 
       		     android:id="@+id/TextView2"
       		     android:text="UserPassword*"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content"
    			 android:layout_marginTop="25dp"
    			 android:textStyle="bold"
    			 android:textSize="15dp"
    			 android:textColor="@android:color/holo_purple"
    			 android:layout_marginLeft="10dp"
    			  android:layout_below="@+id/TextView1"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText2"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText1"
       		     android:layout_below="@+id/EditText1"
       		     android:layout_marginTop="10dp"
       		     android:inputType="textPassword" 
       		     android:hint="Enter Password" />
       		 
       		  <TextView 
       		     android:id="@+id/TextView3"
       		     android:text="UserName*"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="28dp"
    			 android:textColor="@android:color/holo_purple"
    			 android:textStyle="bold"
    			 android:textSize="15dp"
    			 android:layout_marginLeft="10dp"
    			  android:layout_below="@+id/TextView2"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText3"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText2"
       		     android:layout_below="@+id/EditText2"
       		     android:layout_marginTop="10dp"
       		     android:hint="Enter UserName" />
       		 
       		  <TextView 
       		     android:id="@+id/TextView4"
       		     android:text="FatherName*"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="31dp"
    			 android:textSize="15dp"
    			 android:textColor="@android:color/holo_purple"
    			 android:textStyle="bold"
    			 android:layout_marginLeft="10dp"
    			  android:layout_below="@+id/TextView3"
       		     
       		     />     
       		     
       		 <EditText 
       		     android:id="@+id/EditText4"
       		     android:layout_width="match_parent"
    			 android:layout_height="wrap_content"
    			 android:layout_toRightOf="@+id/TextView4"
    			 android:layout_marginLeft="40dp" 
    			 android:layout_marginTop="10dp"
    			 android:layout_below="@+id/EditText3"
				 android:hint="Enter FatherName"
       		     />
       		 
       		  
       		  <TextView 
       		     android:id="@+id/TextView10"
       		     android:text="Mobile No.*"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="30dp"
    			 android:textSize="15dp"
    			 android:layout_marginLeft="10dp"
    			 android:textColor="@android:color/holo_purple"
    			 android:textStyle="bold"
    			  android:layout_below="@+id/TextView4"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText10"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText4"
       		     android:layout_below="@+id/EditText4"
       		     android:layout_marginTop="10dp"
       		     android:hint="Enter Mobile no." />

       		  <TextView 
       		     android:id="@+id/TextView11"
       		     android:text="HelpLine no. 1*"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="30dp"
    			 android:textSize="15dp"
    			 android:layout_marginLeft="10dp"
    			 android:textStyle="bold"
    			 android:textColor="@android:color/holo_purple"
    			  android:layout_below="@+id/TextView10"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText11"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText10"
       		     android:layout_below="@+id/EditText10"
       		     android:layout_marginTop="10dp"
       		     android:hint="" />
       		 
       		  <TextView 
       		     android:id="@+id/TextView12"
       		     android:text="HelpLine no. 2"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="30dp"
    			 android:textSize="15dp"
    			 android:layout_marginLeft="10dp"
    			 android:textStyle="bold"
    			 android:textColor="@android:color/holo_purple"
    			  android:layout_below="@+id/TextView11"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText12"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText11"
       		     android:layout_below="@+id/EditText11"
       		     android:layout_marginTop="10dp"
       		     android:hint="" />
       		 
       		   <TextView 
       		     android:id="@+id/TextView13"
       		     android:text="HelpLine no. 3"
       		     android:layout_width="wrap_content"
    			 android:layout_height="wrap_content" 
    			 android:layout_marginTop="30dp"
    			 android:textStyle="bold"
    			 android:textSize="15dp"
    			 android:textColor="@android:color/holo_purple"
    			 android:layout_marginLeft="10dp"
    			  android:layout_below="@+id/TextView12"
       		     
       		     />     
       		     
       		 <EditText
       		     android:id="@+id/EditText13"
       		     android:layout_width="match_parent"
       		     android:layout_height="wrap_content"
       		     android:layout_alignLeft="@+id/EditText12"
       		     android:layout_below="@+id/EditText12"
       		     android:layout_marginTop="10dp"
       		     android:hint="" />
       		 
       		 <Button
       		     android:id="@+id/Button1"
       		     android:layout_width="wrap_content"
       		     android:layout_height="wrap_content"
       		     android:layout_below="@+id/TextView13"
       		     android:layout_marginLeft="100dp"
       		     android:background="@android:color/holo_orange_light"
       		     android:textColor="@android:color/white"
       		     android:layout_marginTop="30dp"
       		     android:text="Update" />
       		 
        </RelativeLayout>
        
        
    </ScrollView>

</RelativeLayout>